<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("logo.png", class:"review-icon"), "/" %>
    <form class="search-form" action="#">
    <input class='input-box' placeholder='キーワードから探す'>
    <button class="search-button">
          <%= image_tag "find.png", class:"search-icon" %>
        </button>
      </form>
    </div>
    <div class="nav">
        <ul class="header-list">
          <li><%= link_to 'HOME', "/", class: "choice" %></li>
          <li><%= link_to 'New Product', "#", class: "choice" %></li>
          <li><%= link_to 'News', "#", class: "choice" %></li>
          <li><%= link_to 'Maker Links', "#", class: "choice" %></li>
          <li><%= link_to 'Access', "#", class: "choice" %></li>
          <li><%= link_to 'Review Post', "/items/new", class: "choice" %></li>
          <li class="choice" id="down"> Member</li>
        </ul>
        <ul class="show-lists hidden" id="pull-down">
      <% if user_signed_in? %>
         <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
         <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
         <li><%= link_to 'ログイン', "/users/sign_in", class: "login" %></li>
         <li><%= link_to '新規登録', "/users/sign_up", class: "sign-up" %></li>
      <% end %>
    </ul>
    </div>
  </div>
</header>
