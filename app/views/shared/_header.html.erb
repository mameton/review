<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("logo.png", class:"review-icon"), "/" %>
    <%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form|%>
      <%= form.text_field :keyword, placeholder: "投稿内容のタイトルから探す", class: "input-box"%>
      <%= form.submit "検索", class: "search-button"%>
    <% end %>
  </div>
    <div class="nav">
        <ul class="header-list">
          <li><%= link_to 'HOME', "/", class: "choice" %></li>
          <li><%= link_to 'New Product', "#", class: "choice" %></li>
          <li><%= link_to 'News', "#", class: "choice" %></li>
          <li><%= link_to 'Maker Links', "#", class: "choice" %></li>
          <li><%= link_to 'Access', "#", class: "choice" %></li>
          <li><%= link_to 'Review Post', "/items/new", class: "choice" %></li>
          <li class="choice" id="down"> Member</li>
        </ul>
        <ul class="show-lists hidden" id="pull-down">
      <% if user_signed_in? %>
         <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
         <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
         <li><%= link_to 'ログイン', "/users/sign_in", class: "login" %></li>
         <li><%= link_to '新規登録', "/users/sign_up", class: "sign-up" %></li>
      <% end %>
    </ul>
    </div>
  </div>
</header>
